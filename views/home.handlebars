<div class="row">
  {{!-- create two columns --}}
  <div class="col-12 col-md-3">
    <h2>Create a Burger</h2>
    <form id="burger-form">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Burger name" name="burger-name" />
      </div>
      <button class="btn btn-block btn-outline-success">Submit New Burger</button>
    </form>
  </div>

  <div class="col-12 col-md-9">
    <div class="card mb-4">
      <h3 class="card-header">
        Burger Not Devoured
      </h3>
      <ul class="list-group-flush">
        {{!-- loop through cats from handlebars and print out burger that are NOT devoured --}}
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            {{!-- devoured a burger --}}
            <button class="btn btn-info devouredBurger" data-burgerid="{{this.id}}">
               Devoured it
            </button>
            {{!-- delete a cat --}}
            <button class="btn btn-danger deleteBurger" data-burgerid="{{this.id}}">
              Delete it
            </button>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="card mb-4">
      <h3 class="card-header">
       Burger Devoured
      </h3>
      <ul class="list-group-flush">
        {{!-- loop through burger from handlebars and print out burger that are  devoured --}}
        {{#each burgers}}
        {{#if this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            {{!-- delete a burger --}}
            <button class="btn btn-danger deleteBurger" data-burgerid="{{this.id}}">
              Delete it
            </button>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


</div>

<script src="./assets/js/burgers.js" type="text/javascript"></script>